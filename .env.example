# =============================================================================
# Company Scraper Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Proxy settings (optional)
HTTP_PROXY=
HTTPS_PROXY=
PROXY_USERNAME=
PROXY_PASSWORD=

# API Keys (optional - for enhanced discovery)
LINKEDIN_API_KEY=
CRUNCHBASE_API_KEY=
WELLFOUND_API_KEY=

# Rate limiting
MAX_REQUESTS_PER_MINUTE=30
MAX_CONCURRENT_REQUESTS=5
MIN_DELAY_SECONDS=1.0
MAX_DELAY_SECONDS=3.0

# Browser settings
USE_HEADLESS=true
BROWSER_TIMEOUT=30000

# Storage
OUTPUT_DIR=data/company_contacts
LOG_DIR=logs

# Scraping behavior
RESPECT_ROBOTS_TXT=true
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Debug
DEBUG=false
VERBOSE=false
